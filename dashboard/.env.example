# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp-analytics?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=https://your-vercel-app.vercel.app
NEXTAUTH_SECRET=your-super-secret-key-generate-with-openssl-rand-base64-32

# WhatsApp Service URL (Railway deployment)
WHATSAPP_SERVICE_URL=https://your-railway-app.up.railway.app

# Google Sheets Configuration (optional - for export feature)
GOOGLE_SHEETS_ID=your-google-sheet-id
GOOGLE_CREDENTIALS_PATH=./credentials/service-account.json
NEXT_PUBLIC_GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Dashboard Configuration
NEXT_PUBLIC_REFRESH_INTERVAL=300000

# Message Tracking API Key (shared between WhatsApp service and dashboard)
WHATSAPP_API_KEY=your-secure-api-key-for-message-tracking

# Cron Job Secret (for scheduled tasks like counter reset)
CRON_SECRET=your-cron-secret-key
